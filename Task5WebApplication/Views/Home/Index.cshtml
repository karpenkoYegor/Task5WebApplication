@model IndexViewModel
@{

}
<div id="#cards" class="d-flex justify-content-center align-content-around flex-wrap mt-5">
    <form method="post" asp-controller="Home" asp-action="Index">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <div class="row">
                        <div class="col-4">
                            <input id="textError" class="form-control" asp-for="Errors" value="@Model.Errors"/>
                        </div>
                        <div class="col-4">
                            <select asp-for="CountryId" class="form-select">
                                @foreach (var option in Model.Countries)
                                {
                                    <option value="@option.Id">@option.CountryName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <input id="rangeError" class="form-range" type="range" min="0" max="10" step="0.5"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <button class="btn btn-primary" type="submit">
                                <i class="fa-solid fa-rotate"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-6 ">
                    <div class="row">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">Seed</span>
                            </div>
                            <input asp-for="UserSeed" type="number" id="tentacles" class="form-control"
                                   min="1" max="100" value="@Model.UserSeed">
                        </div>
                    </div>
                    <div class="row py-4">
                        <div class="col-3">
                            <button asp-action="SaveData" asp-controller="Home" class="btn btn-primary">
                                <i class="fa-solid fa-floppy-disk"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <table class="table">
                    @for (int i = 1; i <= 10; i++)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@Model.PeopleInformation[i - 1][0].ToString()</td>
                            <td>@Model.PeopleInformation[i - 1][1].ToString()</td>
                            <td>@Model.PeopleInformation[i - 1][2].ToString()</td>
                            <td>@Model.PeopleInformation[i - 1][3].ToString()</td>
                            <td>@Model.PeopleInformation[i - 1][4].ToString()</td>
                        </tr>
                    }
                    @await Html.PartialAsync("_Cards")
                </table>
            </div>
        </div>
    </form>
</div>
